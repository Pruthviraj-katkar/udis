<%- include('partials/header') %>
    <div class="adddepartment">
        <form action="/department" method="post">
            <div class="heading">
                <h3>Add Department</h3>
            </div>
            <div class="form-group ">
                <label class="departmentlabel">Department Name</label>
                <input type="text" name="departmentname" class="form-control " placeholder="Enter Department Name"
                    required>

            </div>

            <button type="submit" class="btn btn-secondary" name="adddepartment">Add</button>
        </form>
    </div>


    <div class="departmentAvailable">
        <h3> Departments</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Department Name</th>
                </tr>
            </thead>
            <tbody class="list">
                <form action="/removedepartment" method="post">
                    <% for(var i=0;i<listitem.length;i++) { %>
                        <tr>
                            <th scope="row">
                                <%= i+1%>
                            </th>
                            <td>
                                <%= listitem[i].departmentname %>
                            </td>
                            <td class="remove">
                                <button type="submit" name="removedepartment"
                                    value="<%= listitem[i]._id %>">Remove</button>
                            </td>
                        </tr>
                        <% } %>
                </form>
            </tbody>
        </table>
    </div>
    <%- include('partials/footer') %>