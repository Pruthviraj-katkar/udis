<%- include('partials/header') %>
    <div class="profilecontainer">
        <div class="title">Student Profile</div>
        <div class="user-details">

            <div class="detail">
                <span class="details">Full Name: </span>
                <span class="showdetail">
                    <%=student.name%>
                </span>
            </div>

            <div class="detail">
                <span class="details">Roll Number: </span>
                <span class="showdetail">
                    <%=student.rollno%>
                </span>
            </div>
        </div>
    </div>
    </div>
    <hr>
    <div class="coursesformark">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Course Name</th>
                    <th scope="col">Course ID</th>
                    <th scope="col">Mark</th>
                </tr>
            </thead>
            <tbody class="list">
                <form action="/addmark" method="post">
                    <% for(var i=0;i<listcourse.length;i++) { %>
                        <tr>
                            <th scope="row">
                                <%= i+1%>
                            </th>
                            <td>
                                <%=listcourse[i].course.coursename %>
                            </td>
                            <td>
                                <%= listcourse[i].course.courseid %>
                            </td>
                            <td>
                                <input type="text" name="markofcourse">
                                <input type="hidden" name="courselist" value="<%=listcourse[i]._id%>">
                            </td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
        <button type="submit" name="addmark">Add</button>
        </form>
    </div>
    <%- include('partials/footer') %>